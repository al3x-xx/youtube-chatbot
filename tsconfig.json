    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "allowSyntheticDefaultImports": true,
        "rootDir": "./src",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "skipLibCheck": true
    }
}